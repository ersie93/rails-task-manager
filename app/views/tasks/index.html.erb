<h1>My tasks</h1>
<ol>
	<% @tasks.each do |task|%>
	<li>
		<%= task.completed ? '☑️' : '⬜️' %> -  
		<%= link_to task.title, task_path(task) %>
		<%= link_to '🗑', task_path(task), method: :delete, data: {confirm: 'are you sure?'} %>
	</li>
	<% end -%>
</ol>

<%= link_to '➕ Add new task', tasks_new_path %>
